<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/background_light"
    android:padding="@dimen/spacing_m">

    <ImageView
        android:id="@+id/iv_vr_image"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cd_camera_result_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@drawable/daisy"/>

    <TextView
        android:id="@+id/tv_vr_label"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:gravity="center_vertical"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/iv_vr_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Daisy"/>

    <TextView
        android:id="@+id/tv_vr_conf"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/iv_vr_image"
        app:layout_constraintTop_toBottomOf="@id/tv_vr_label"
        tools:text="0.9876"/>

</androidx.constraintlayout.widget.ConstraintLayout>


